// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
    relationMode = "prisma"
}

model Post {
    id          String   @id @default(cuid())
    createdAt   DateTime @default(now())
    content     String   @db.VarChar(150)
    authorId    String   @db.VarChar(64)
    imageUrl    String?  @db.VarChar(200)
    mediaUrl    String?  @db.VarChar(200)
    @@index([authorId])
}

model User {
    id              String   @id @default(cuid())
    webPage         String?  @db.VarChar(50)
    bio             String?  @db.VarChar(500)
    bannerImageUrl  String?  @db.VarChar(100)
    profileImageUrl String?  @db.VarChar(100)
    country         String?  @db.VarChar(100)
}

model Followeed {
    id          Int     @id @default(autoincrement())
    watching    String  @db.VarChar(64)
    watched     String  @db.VarChar(64)
    
    @@index([watching,watched])
}